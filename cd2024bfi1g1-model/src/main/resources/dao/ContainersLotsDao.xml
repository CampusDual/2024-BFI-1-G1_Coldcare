<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="containers_lots" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>CL_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>CL_ID</Column>
    </UpdateKeys>
    <GeneratedKey>cl_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="LOT_ID" prefix="cl"/>
                <AmbiguousColumn name="CNT_ID" prefix="cl"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH cl AS (
                        SELECT
                            cl.*,
                            EXISTS (
                                SELECT 1
                                FROM containers_lots_current_view clv
                                INNER JOIN alerts a ON clv.cl_id = a.cl_id
                                WHERE clv.cl_id = cl.cl_id
                            ) AS has_alert
                        FROM
                            containers_lots cl
                        JOIN LOTS l ON cl.lot_id = l.lot_id
                        JOIN CONTAINERS c ON c.CNT_ID = cl.CNT_ID
                        JOIN PRODUCTS p ON l.pro_id = p.pro_id
                    )
                    SELECT *
                    FROM cl
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="get_dates">
            <Sentence>
                <![CDATA[
                    SELECT #COLUMNS#
                    FROM CONTAINERS_LOTS
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="have_associated_measurements">
            <AmbiguousColumns>
                <AmbiguousColumn name="CL_ID" prefix="cl"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT #COLUMNS#
                    FROM CONTAINERS_LOTS cl
                    INNER JOIN MEASUREMENTS m ON cl.CL_ID = m.CL_ID
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="containers_of_lot">
            <AmbiguousColumns>
                <AmbiguousColumn name="CNT_ID" prefix="cl"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH cl AS (
                        SELECT
                            *,
                            EXISTS (
                                SELECT 1
                                FROM containers_lots_current_view clv
                                INNER JOIN alerts a ON clv.cl_id = a.cl_id
                                WHERE clv.cnt_id = c.cnt_id
                            ) AS has_alert
                        FROM
                            ${mainschema}.containers_lots cl
                        INNER JOIN containers c ON cl.cnt_id = c.cnt_id
                    )
                    SELECT *
                    FROM cl
                    #WHERE#
                    #ORDER#
                ]]>

            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
