<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="bills" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>BIL_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>BIL_ID</Column>
    </UpdateKeys>
    <GeneratedKey>bil_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="CMP_ID" prefix="c"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        bills b
                         JOIN companies c
                        ON c.cmp_id = b.cmp_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="bill">
            <AmbiguousColumns>
                <AmbiguousColumn name="CMP_ID" prefix="c"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT COUNT(distinct D.dev_id) AS device_count,
                    COUNT(M.me_id) AS measurement_count
                    FROM devices d
                    JOIN measurements m
                    ON m.dev_id = d.dev_id
                    WHERE d.cmp_id = ?
   					AND m.me_date BETWEEN ? AND ?;
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
