<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="alerts" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>ALT_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>ALT_ID</Column>
    </UpdateKeys>
    <GeneratedKey>alt_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.alerts
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="alertsWithCalculatedColumns">
            <AmbiguousColumns>
                <AmbiguousColumn name="ALT_ID" prefix="a" />
                <AmbiguousColumn name="CNT_ID" prefix="a" />
                <AmbiguousColumn name="LOT_ID" prefix="a" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH t AS (
                        SELECT
                            alt_id,
                            ROUND(avg(me_temp)::numeric, 2) AS avg_temp,
                            ROUND(avg(me_humidity)::numeric, 2) AS avg_humidity
                        FROM
                            measurements m
                        WHERE
                            alt_id IS NOT NULL
                        GROUP BY m.alt_id
                    )
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.alerts a
                    INNER JOIN t ON a.alt_id = t.alt_id
                    INNER JOIN containers c ON a.cnt_id = c.cnt_id
                    INNER JOIN lots l ON a.lot_id = l.lot_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="alertsWithContainerAndLot">
            <AmbiguousColumns>
                <AmbiguousColumn name="CNT_ID" prefix="a" />
                <AmbiguousColumn name="LOT_ID" prefix="a" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.alerts a
                    INNER JOIN containers c ON a.cnt_id = c.cnt_id
                    INNER JOIN lots l ON a.lot_id = l.lot_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
