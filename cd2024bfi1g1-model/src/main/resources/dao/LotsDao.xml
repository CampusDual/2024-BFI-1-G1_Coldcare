<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="lots" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>LOT_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>LOT_ID</Column>
    </UpdateKeys>
    <GeneratedKey>lot_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="PRO_ID" prefix="p"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.lots l
                        JOIN products p ON l.pro_id = p.pro_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>

        <Query id="lots_container">
            <AmbiguousColumns>
                <AmbiguousColumn name="LOT_ID" prefix="l" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                         #COLUMNS#
                    FROM
                        ${mainschema}.lots l
                     JOIN ${mainschema}.containers c
                        ON c.lot_id = l.lot_id
                    #WHERE#

                ]]>
            </Sentence>
        </Query>
        <Query id="historic_lot_container">
            <AmbiguousColumns>
                <AmbiguousColumn name="LOT_ID" prefix="l" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT DISTINCT
                         m.lot_id, m.cnt_id, l.lot_name
                    FROM measurements m
                    JOIN lots l ON m.lot_id = l.lot_id
                    #WHERE#

                ]]>
            </Sentence>
        </Query>
        <Query id="get_min_temp_lot_Id">
            <Sentence>
                <![CDATA[
                    SELECT min_temp
                    FROM lots
                    #WHERE#
                ]]>
            </Sentence>
        </Query>

        <Query id="get_max_temp_lot_Id">
            <Sentence>
                <![CDATA[
                    SELECT max_temp
                    FROM lots
                    #WHERE#
                ]]>
            </Sentence>
        </Query>

        <Query id="lotsProducts">
            <Sentence>
                <![CDATA[
                    WITH t AS (
                        SELECT p.PRO_ID, p.PRO_NAME, l.MIN_TEMP, l.MAX_TEMP, l.LOT_ID, l.LOT_NAME, l.CMP_ID,
                        EXISTS (
                                SELECT 1
                                FROM containers_lots_current_view clv
                                INNER JOIN alerts a ON clv.cl_id = a.cl_id
                                WHERE clv.lot_id = l.lot_id
                            ) AS has_alert
                        FROM
                        lots l
                        JOIN products p ON p.pro_id = l.pro_id
                        )
                    SELECT *
                    FROM t
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>

    </Queries>
</JdbcEntitySetup>
