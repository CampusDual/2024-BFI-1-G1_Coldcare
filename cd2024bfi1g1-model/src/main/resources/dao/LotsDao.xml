<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="lots" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>LOT_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>LOT_ID</Column>
    </UpdateKeys>
    <GeneratedKey>lot_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.lots
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>

        <Query id="lots_container">
            <Sentence>
                <![CDATA[
                    SELECT
                         l.LOT_NAME
                    FROM
                        ${mainschema}.lots l
                    INNER JOIN ${mainschema}.containerslots cl
                        ON cl.lot_id = l.lot_id
                    INNER JOIN ${mainschema}.containers c
                        ON c.cnt_id = cl.cnt_id
                    WHERE
                        c.cnt_id= 2
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
