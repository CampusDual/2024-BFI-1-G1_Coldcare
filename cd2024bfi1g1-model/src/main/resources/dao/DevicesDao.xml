<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="devices" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>DEV_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>DEV_ID</Column>
    </UpdateKeys>
    <GeneratedKey>dev_id</GeneratedKey>
    <Queries>
         <Query id="last_time">
            <AmbiguousColumns>
                <AmbiguousColumn name="DEV_ID" prefix="d"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                       DISTINCT #COLUMNS#, MAX(me_date) AS me_date
                    FROM
                        ${mainschema}.devices d
                        
                    INNER JOIN ${mainschema}.measurements m
                        ON d.DEV_ID = m.DEV_ID
                    GROUP BY DEV_MAC, d.DEV_ID, USR_ID
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
